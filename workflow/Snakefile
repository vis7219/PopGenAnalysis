    threads: use_threads
    shell:
        "shapeit4.2 --input results/iHS/2_{own_ID}_Geno0.vcf.gz"
        " --map workflow/resources/GeneticMaps/chr{wildcards.chrom}.b38.gmap.gz"
        " --region {wildcards.chrom}"
        " --output results/iHS/{own_ID}_Phased/{own_ID}_Phased.chr{wildcards.chrom}.vcf.gz"
        " --thread {threads} &> {log}"

rule iHS_MapCreation:
    input:
        expand("results/iHS/{ID}_Phased/{ID}_Phased.chr{chrom}.vcf.gz",
            ID = [own_ID],
            allow_missing = True)
    output:
        expand("results/iHS/{ID}_iHS.Maps/{ID}.chr{chrom}.iHS.Maps",
            ID = [own_ID],
            allow_missing = True)
    shell:
        "python workflow/scripts/iHS_MapMaker.py --input results/iHS/{own_ID}_Phased/{own_ID}_Phased.chr{wildcards.chrom}.vcf.gz"
        " --output results/iHS/{own_ID}_iHS.Maps/{own_ID}.chr{wildcards.chrom}.iHS.Maps"

