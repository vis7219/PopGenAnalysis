rule iHS_Preparation:
    input:
        expand("results/1_QualityCheck/9_{ID}_Heterozygosity{extension}",
            extension = [".pgen" , ".psam" , ".pvar"],
            ID = [own_ID])
    output:
        "results/iHS/2_{own_ID}_Geno0.vcf.gz"
    conda:
        "envs/bcftools_env.yaml"
    threads: use_threads
    shell:
        "mkdir -p results/iHS; "

        "workflow/software/plink2 --pfile results/1_QualityCheck/9_{own_ID}_Heterozygosity"
        " --maf {ihs_maf} --make-pgen --out results/iHS/1_{own_ID}_MAF --threads {threads} --silent; "

        "workflow/software/plink2 --pfile results/iHS/1_{own_ID}_MAF"
        " --geno 0 --recode vcf bgz --out results/iHS/2_{own_ID}_Geno0 --threads {threads} --silent; "

        "bcftools index results/iHS/2_{own_ID}_Geno0.vcf.gz --threads {threads}"

rule iHS_Phasing:
    input:
        expand("results/iHS/2_{ID}_Geno0.vcf.gz",
        ID = [own_ID])
